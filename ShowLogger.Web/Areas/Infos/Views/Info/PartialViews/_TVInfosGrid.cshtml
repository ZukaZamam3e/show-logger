@using ShowLogger.Models

@model IEnumerable<TvInfoModel>

@(Html.OAGrid(Model)
    .NamedAndId("gvTVInfos")
    .IdProperty("TVInfoId")
    .Columns(columns =>
    {
        columns.Commands(commands =>
        {
            commands.Custom("Open", "fas fa-eye", "infos.openTVInfo");
            //commands.Custom("Delete", "fas fa-trash-alt", "infos.delete");
        });
        //columns.OAColumn(model => model.MobileView).RenderedAs(m => "<span>" + m.MobileView + "</span>").Encoded(false);
        columns.OAColumn(model => model.ShowName);
        columns.OAColumn(model => model.ShowOverview);
        columns.OAColumn(model => model.OtherNames);
        columns.OAColumn(model => model.LastDataRefresh);
        columns.OAColumn(model => model.LastUpdated);
    })
    .Pageable(pager =>
    {
        pager.PagesToDisplay = 3;
        pager.RowsPerPage = 10;
    })
)