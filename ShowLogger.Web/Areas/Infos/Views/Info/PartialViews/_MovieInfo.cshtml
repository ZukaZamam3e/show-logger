@model MovieInfoModel

@{
    ViewBag.Title = Model.MovieName;
}

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmMovieInfo" }))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.MovieInfoId)

    <div class="form-group row" style="padding-bottom: 10px;">
        

        <div class="form-group row">
            <div class="col-sm-2">
                @Html.OA().LabelFor(m => m.MovieName)
            </div>

            <div class="col-sm-10">
                @(Html.OA().TextBoxFor(m => m.MovieName)
                    .HtmlAttributes(new { @class = "form-control mandatory" })
                )
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                @Html.OA().LabelFor(m => m.MovieOverview)
            </div>

            <div class="col-sm-10">
                @(Html.OA().TextAreaFor(m => m.MovieOverview)
                    .HtmlAttributes(new { @class = "form-control mandatory" })
                    .Rows(4)
                    .HtmlAttributes(new { @style = "width:100%;" })
                )
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                @Html.OA().LabelFor(m => m.Runtime)
            </div>

            <div class="col-sm-4">
                @(Html.OA().NumericTextBoxFor(m => m.Runtime)
                    .HtmlAttributes(new { @class = "form-control mandatory" })
                    )
            </div>

            <div class="col-sm-2">
                @Html.OA().LabelFor(m => m.AirDate)
            </div>

            <div class="col-sm-4">
                @Model.AirDate.ToString()
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                @Html.OA().LabelFor(m => m.LastDataRefresh)
            </div>

            <div class="col-sm-4">
                @Model.LastDataRefresh.ToString()
            </div>

            <div class="col-sm-2">
                @Html.OA().LabelFor(m => m.LastUpdated)
            </div>

            <div class="col-sm-4">
                @Model.LastUpdated.ToString()
            </div>
        </div>
        
        @* <div class="form-group row">
            <div class="col-sm-2">
                @Html.OA().LabelFor(m => m.TMDbId)
            </div>

            <div class="col-sm-4">
                @(Html.OA().NumericTextBoxFor(m => m.TMDbId)
                    .HtmlAttributes(new { @class = "form-control mandatory" })
                )
            </div>

            <div class="col-sm-2">
                @Html.OA().LabelFor(m => m.OMDbId)
            </div>

            <div class="col-sm-4">
                @(Html.OA().TextBoxFor(m => m.OMDbId)
                    .HtmlAttributes(new { @class = "form-control mandatory" })
                )
            </div>
        </div> *@

        <div class="form-group row">
            <div class="col-sm-2">
                @Html.OA().LabelFor(m => m.ApiType)
            </div>

            <div class="col-sm-4">
                @(Html.OA().NumericTextBoxFor(m => m.ApiType)
                    .HtmlAttributes(new { @class = "form-control mandatory" })
                )
            </div>

            <div class="col-sm-2">
                @Html.OA().LabelFor(m => m.ApiId)
            </div>

            <div class="col-sm-4">
                @(Html.OA().TextBoxFor(m => m.ApiId)
                    .HtmlAttributes(new { @class = "form-control mandatory" })
                )
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                @Html.OA().LabelFor(m => m.OtherNames)
            </div>

            <div class="col-sm-4">
                @(Html.OA().TextBoxFor(m => m.OtherNames)
                    .HtmlAttributes(new { @class = "form-control mandatory" })
                )
            </div>

            <div class="col-sm-6">
                @(Html.OA().Button()
                    .Name("btnUpdateOtherNames")
                    .Text("Update Other Names")
                    .HtmlAttributes(new { @class = "btn btn-primary", style = "width: 100%" })
                    .Click("infos.btnUpdateMovieOtherNames_Click()")
                )
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-4">

            </div>

            <div class="col-sm-4">
                @(Html.OA().Button()
                    .Name("btnRefreshInfo")
                    .Text("Refresh")
                    .HtmlAttributes(new { @class = "btn btn-primary", style = "width: 100%" })
                    .Click("infos.btnRefreshMovieInfo_Click()")
                )
            </div>

            <div class="col-sm-4">
                
            </div>
        </div>

        
    </div>
}