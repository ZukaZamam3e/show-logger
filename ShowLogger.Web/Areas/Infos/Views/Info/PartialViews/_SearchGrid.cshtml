@using ShowLogger.Models.Api

@model IEnumerable<ApiSearchResultModel>

<div id="divSearch">
    @(Html.OAGrid(Model)
        .NamedAndId("gvSearch")
        .Columns(columns =>
        {
            columns.Commands(commands =>
            {
                commands.Custom("Open", "fas fa-eye", "infos.open");
                commands.Custom("Download", "fas fa-download", "infos.download");
            });
            //columns.OAColumn(model => model.MobileView).RenderedAs(m => "<span>" + m.MobileView + "</span>").Encoded(false);
            columns.OAColumn(model => model.Name).Sortable(false);
            columns.OAColumn(model => model.AirDate).Formatted("{0:d}").Sortable(false);
            columns.OAColumn(model => model.Id).Sortable(false);
        })
        .Pageable(pager =>
        {
            pager.PagesToDisplay = 3;
            pager.RowsPerPage = 100;
        })
    )

</div>
