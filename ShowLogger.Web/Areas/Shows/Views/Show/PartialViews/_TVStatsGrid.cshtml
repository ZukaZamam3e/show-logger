@using ShowLogger.Models

@model IEnumerable<GroupedShowModel>

@(Html.OAGrid(Model)
    .NamedAndId("gvTVStats")
    .Columns(columns =>
    {
        columns.Commands(commands =>
        {
            commands.Custom("TVStats_AddNextEpisode", "fas fa-plus", "shows.addNextEpisode");
        });
        columns.Add(model => model.MobileView).SetCssClass().RenderedAs(m => "<span>" + m.MobileView + "</span>").Encoded(false);
        columns.Add(model => model.ShowName).SetCssClass();
        columns.Add(model => model.EpisodesWatched).SetCssClass();
        columns.Add(model => model.FirstWatched).SetCssClass().Formatted("{0:d}");
        columns.Add(model => model.LastWatched).SetCssClass().Formatted("{0:d}");
        columns.Add(model => model.EpisodesPerDay).SetCssClass();
        columns.Add(model => model.DaysSinceStarting).SetCssClass();
    })
    .Pageable(pager =>
    {
        pager.PagesToDisplay = 3;
        pager.RowsPerPage = 10;
    })
)