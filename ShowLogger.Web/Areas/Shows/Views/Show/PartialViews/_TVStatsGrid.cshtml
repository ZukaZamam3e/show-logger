@using ShowLogger.Models

@model IEnumerable<GroupedShowModel>

@(Html.OAGrid(Model)
    .NamedAndId("gvTVStats")
    .Columns(columns =>
    {
        columns.Commands(commands =>
        {
            commands.Custom("TVStats_AddNextEpisode", "fas fa-plus", "shows.addNextEpisode");
        });
        columns.OAColumn(model => model.MobileView).RenderedAs(m => "<span>" + m.MobileView + "</span>").Encoded(false);
        columns.OAColumn(model => model.ShowName);
        columns.OAColumn(model => model.EpisodesWatched);
        columns.OAColumn(model => model.FirstWatched).Formatted("{0:d}");
        columns.OAColumn(model => model.LastWatched).Formatted("{0:d}");
        columns.OAColumn(model => model.Watched);
        columns.OAColumn(model => model.DaysSinceStarting);
        columns.OAColumn(model => model.NextEpisodeInfo).RenderedAs(m => "<span>" + m.NextEpisodeInfo + "</span>").Encoded(false);
    })
    .Pageable(pager =>
    {
        pager.PagesToDisplay = 3;
        pager.RowsPerPage = 10;
    })
)