<div class="show_container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            @(Html.OA().GridPage()
                .Name("gvShows")
                .Header(header =>
                {
                    header.Custom("oa_grid_button fas fa-search", "shows.openSearch()");
                    header.Creator();
                    header.Refresh();
                })
                .Read(Url.Action("Read", "Show", new { area = "Shows" }))
                )
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @(Html.OA().Window()
            .Name("wAddRange")
            .Title("Add Range")
            .Partial(Url.Action("LoadAddRangeWindow", "Show", new { area = "Shows" }))
            .PostWindowFunc("shows.postAddRange")
            .Width(365)
        )
    </div>
</div>

<div class="search_container" style="display: none;">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <partial name="~/Areas/Shows/Views/Show/PartialViews/_Search.cshtml" />
        </div>
    </div>
</div>

<div class="watch_from_search_container" style="display: none;">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div id="divWatchFromSearch">
            </div>
        </div>
    </div>
</div>


<script>
    $(function () {
        shows.init();
    })
</script>