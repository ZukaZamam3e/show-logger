@using ShowLogger.Models

@model IEnumerable<MovieModel>

@(Html.OAGrid(Model)
    .NamedAndId("gvMovieStats")
    .Columns(columns =>
    {
        columns.OAColumn(model => model.MobileView).RenderedAs(m => "<span>" + m.MobileView + "</span>").Encoded(false);
        columns.OAColumn(model => model.MovieName);
        columns.OAColumn(model => model.ShowTypeIdZ);
        columns.OAColumn(model => model.DateWatched).Formatted("{0:d}");
        columns.OAColumn(model => model.AlistTicketAmt).Formatted("{0:c}");
        columns.OAColumn(model => model.TicketAmt).Formatted("{0:c}");
        columns.OAColumn(model => model.PurchaseAmt).Formatted("{0:c}");
    })
    .Pageable(pager =>
    {
        pager.PagesToDisplay = 3;
        pager.RowsPerPage = 10;
    })
)